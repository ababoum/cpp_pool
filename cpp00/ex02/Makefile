CXX			= @c++

CXXFLAGS	= -Wall -Werror -Wextra -g -std=c++98 -fsanitize=address

NAME 		= accounts_tests

SRCS		= ./tests.cpp \
				./Account.cpp

INCL		= ./Account.hpp 

OBJS		= $(SRCS:.cpp=.o)

all:		$(NAME)

$(NAME):	$(OBJS) $(INCL)
			$(CXX) $(CFLAGS) $(SRCS) -o $(NAME)
			@echo "\033[1;32m Account tests executable is compiled and ready.\e[0m"

clean:		
			@rm -f $(OBJS)
			@echo "\033[1;36m .o files successfully deleted.\e[0m"

fclean: 	clean
			@rm -f  ${OBJS} $(NAME)
			@echo "\033[1;36m Account tests executable successfully deleted.\e[0m"

re: fclean ${NAME}

.PHONY: clean fclean all re